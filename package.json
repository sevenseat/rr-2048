{
  "name": "re2048",
  "version": "0.1.0",
  "private": false,
  "dependencies": {
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "reason-scripts": "0.7.0"
  },
  "homepage": "https://sevenseat.github.io/rr-2048",
  "keywords": [],
  "author": "John Schweikert",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sevenseat/rr-2048.git"
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "format": "npm run format:refmt; npm run format:prettier",
    "format:refmt": "refmt --in-place src/**/*.re",
    "format:prettier":
      "prettier --single-quote --write src/**/*.{js,jsx,json,css} *.json",
    "start": "react-scripts start",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm test -- --coverage",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "prepare": "npm link bs-platform"
  },
  "lint-staged": {
    "src/**/*.{re,rei}": ["refmt --in-place", "git add"],
    "src/**/*.{js,jsx,json,css}": ["prettier --single-quote --write", "git add"]
  },
  "devDependencies": {
    "bs-jest": "^0.2.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "reason-react": "^0.3.0",
    "source-map-explorer": "^1.5.0"
  }
}
